  type:                exitcode-stdio-1.0
  hs-source-dirs:      test, src
  main-is:             ParserTest.hs
  other-modules:       Parser, Absyn, Formatter
  build-depends:       base >=4.9 && <4.15, tasty, tasty-hunit, parsec >=3.1 && <3.2
  default-language:    Haskell2010

test-Suite formatter-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test, src
  main-is:             FormatterTest.hs
  other-modules:       Parser, Absyn, Formatter
  build-depends:       base >=4.9 && <4.15, tasty, tasty-hunit, parsec >=3.1 && <3.2
  default-language:    Haskell2010
        
