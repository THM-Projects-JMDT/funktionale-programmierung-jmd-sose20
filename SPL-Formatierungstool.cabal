name:                SPL-Formatierungstool
version:             0.1.0.0
synopsis:            Code formatter for SPL
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Jannik Lapp, Max Stephan, David Martschenko
maintainer:          jannik.lapp@mni.thm.de, max.stephan@mni.thm.de, david.martschenko@mni.thm.de
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md, Parser.hs, Absyn.hs, Formatter.hs
cabal-version:       >=1.10

executable splf
  main-is:             Main.hs
  other-modules:       Parser, Absyn, Formatter
